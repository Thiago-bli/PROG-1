import java.util.Scanner;
public class Exemplo02 {
    public static void main(String args[]){
        Scanner leitor = new Scanner(System.in);
        System.out.print("Valor de x1: ");
        double x1 = leitor.nextDouble();
        System.out.print("Valor de y1: ");
        double y1 = leitor.nextDouble();
        System.out.print("Valor de x2: ");
        double x2 = leitor.nextDouble();
        System.out.print("Valor de y2: ");
        double y2 = leitor.nextDouble();
        double soma = Math.pow(x1 - x2,2) + Math.pow(y1 - y2,2);
        double distancia = Math.sqrt(soma);
        System.out.printf("O resultado do cálculo é %.2f%n: ",distancia);
    }
}
