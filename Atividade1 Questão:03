import java.util.Scanner;
public class Exemplo01 {
    public static void main(String args[]){
       Scanner leitor = new Scanner(System.in);
       System.out.print("Informe o nome do funcionário: ");
       String nome = leitor.next();
       System.out.print("Salario fixo: ");
       int salarioFixo = leitor.nextInt();
       System.out.print("Total de vendas efetuadas por voçê no mês (em dinheiro): ");
       int totVendas = leitor.nextInt();
       double totalReceber = salarioFixo + (totVendas * 0.15);
       System.out.print("O vendedor: "+nome+" irá receber de salário: "+totalReceber);
    }

}
